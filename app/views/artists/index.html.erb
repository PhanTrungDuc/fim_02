<h1><%= t ".heading" %></h1>
<%= render "search_form" %>
<table class="table table-hover">
  <tr>
    <th><%= t ".name" %></th>
  </tr>
  <% @artists.each do |artist| %>
    <li class="list-group-item">
      <%= link_to artist.name, artist_path(artist) %>
    </li>
    <%= image_tag artist.avatar.url(:medium) %>
  <% end %>
</table>
