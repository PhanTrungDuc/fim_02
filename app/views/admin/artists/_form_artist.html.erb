<div class="col-md-6 col-md-offset-3">
  <%= form_for [:admin, @artist], html: {multipart: true} do |f| %>
    <%= render "shared/error_messages", object: f.object %>
    <div class="form-group">
      <%= f.label :name %><br/>
      <%= f.text_field :name, class: "form-control" %>
    </div>  
    <div class="form-group">
      <%= f.label :type_of_music %><br/>
      <%= f.select :type_of_music,
        options_for_select(@support.type_of_musics), {include_blank: true},
        class: "chosen-select" %>
    </div>
    <div class="form-group">
      <%= f.label :artist_type %><br/>
      <%= f.select :artist_type,
        options_for_select(@support.artist_types), {include_blank: true},
        class: "chosen-select" %>
    </div>
    <div class="form-group">
      <%= f.label :date_of_birth %><br/>
      <%= f.text_field :date_of_birth, "data-provide": "datepicker",
        class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :avatar %><br/>
      <%= f.file_field :avatar %>
    </div>
    <%= f.submit t(".submit"), class: "btn btn-primary btn-block btn-lg" %>
  <% end %>
</div>
