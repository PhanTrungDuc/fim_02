
<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".link_home"), root_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to t(".link_logout"),
            destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li><%= link_to t(".link_login"), user_session_path %></li>
          <li><%= link_to t(".link_signup"), new_user_registration_path %></li>
        <% end %>  
      </ul>
    </nav>
  </div>
</header>
